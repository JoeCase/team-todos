<%= form_for @task, url: {action: 'create'} do |f| %>
  <div>
    <%= f.label :name, "Task Name" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :priority %>
    <%= f.text_field :priority %>
  </div>

  <div>
    <%= f.label :due, 'Due Date' %>
    <%= f.text_field :due %>
  </div>

  <div>
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </div>


  <div>
    <%= f.submit %>
  </div>
<% end %>
